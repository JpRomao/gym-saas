generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  MANAGER
  WORKER
  RELATIONED
}

model Gym {
  id            String    @id @default(uuid())
  name          String
  phone         String
  email         String
  cnpj          String    @unique
  lastPayment   DateTime? @map("last_payment")
  premiumEndsAt DateTime? @map("premium_ends_at")
  ownerId       String    @map("owner_id")
  createdAt     DateTime  @default(now()) @map("created_at")

  employees Employee[]
  Student   Student[]
  Plan      Plan[]

  Owner Owner @relation(fields: [ownerId], references: [id])

  @@index([email])
  @@map("gyms")
}

model Employee {
  id       String   @id @default(uuid())
  name     String
  phone    String
  cpf      String   @unique
  email    String   @unique
  password String
  gymId    String   @map("gym_id")
  role     UserRole @default(WORKER)
  address  String

  gym Gym @relation(fields: [gymId], references: [id])

  @@index([email])
  @@index([cpf])
  @@map("employees")
}

model Student {
  id                            String    @id @default(uuid())
  name                          String
  email                         String    @unique
  phone                         String
  cpf                           String
  gender                        String?
  address                       String
  planId                        String    @map("plan_id")
  gymId                         String    @map("gym_id")
  birthday                      DateTime
  hasMedicalRestriction         Boolean   @map("has_medical_restriction")
  medicalRestrictionDescription String?   @map("medical_restriction_description")
  weight                        Int?
  height                        Int?
  lastPaymentDate               DateTime? @map("last_payment_date")

  Gym Gym @relation(fields: [gymId], references: [id])

  @@index([email])
  @@index([cpf])
  @@map("students")
}

model Plan {
  id       Int    @id @default(autoincrement())
  name     String @unique
  price    Int
  duration Int
  discount Float? @default(0)
  gymId    String @map("gym_id")

  gym Gym @relation(fields: [gymId], references: [id])

  @@index([name])
  @@map("plans")
}

model Admin {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@index([email])
  @@map("admins")
}

model Owner {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  password       String
  phone          String
  firstLoginDate DateTime? @map("first_login_date")

  gyms Gym[]

  @@index([email])
  @@map("owners")
}
